<Window x:Class="MarioNRabbit.Views.Fin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Fin" Height="800" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <MediaElement x:Name="mediaVideo" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" LoadedBehavior="Play" />
        <TextBlock x:Name="txtMessage" Grid.Row="1" Foreground="Yellow" FontSize="25" FontFamily="/Resources/Fonts/#Super Mario Bros. 2" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
